<UserControl x:Class="StreamControl.Views.Streams"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MaxWidth="250" MinWidth="250">
    <GroupBox Header="{Binding StreamsHeader}">
        <ItemsControl>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Controls:ToggleSwitch Style="{DynamicResource MahApps.Metro.Styles.ToggleSwitch.Win10}" 
                                           Content="{Binding Title}" 
                                           CheckedCommand="{Binding RelativeSource={RelativeSource AncestorType=Streams}, Path=ActivateCommand}" 
                                           CheckChangedCommandParameter="{Binding .}" 
                                           Unchecked="{Binding RelativeSource={RelativeSource AncestorType=Streams}, Path=DeactivateCommand}" 
                                           UnCheckedCommandParameter="{Binding .}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </GroupBox>
</UserControl>
